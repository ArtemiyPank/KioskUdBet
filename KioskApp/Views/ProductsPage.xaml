<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KioskApp.ViewModels"
             x:Class="KioskApp.Views.ProductsPage"
             Title="Products"
             x:Name="productsPage"
             BackgroundColor="{DynamicResource PrimaryBackgroundColor}">
    <!-- ÐžÐ±Ñ‘Ñ€Ñ‚ÐºÐ° Ð² ScrollView Ð´Ð»Ñ Ð°Ð´Ð°Ð¿Ñ‚Ð¸Ð²Ð½Ð¾ÑÑ‚Ð¸ -->
    <ScrollView>
        <StackLayout Padding="20"
                     Spacing="20"
                     HorizontalOptions="Center">

            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð´Ð¾Ð±Ð°Ð²Ð»ÐµÐ½Ð¸Ñ Ð¿Ñ€Ð¾Ð´ÑƒÐºÑ‚Ð° (Ð²Ð¸Ð´Ð¸Ð¼Ð° Ñ‚Ð¾Ð»ÑŒÐºÐ¾ Ð´Ð»Ñ Ð°Ð´Ð¼Ð¸Ð½Ð°) -->
            <Button Text="Add Product"
                    Command="{Binding NavigateToAddProductCommand}"
                    BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                    TextColor="{DynamicResource PrimaryTextColor}"
                    FontSize="16">
                <Button.Triggers>
                    <DataTrigger TargetType="Button"
                                 Binding="{Binding IsAdmin}"
                                 Value="False">
                        <Setter Property="IsVisible"
                                Value="False" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <!-- Ð¡Ð¿Ð¸ÑÐ¾Ðº Ð¿Ñ€Ð¾Ð´ÑƒÐºÑ‚Ð¾Ð² -->
            <CollectionView ItemsSource="{Binding Products}"
                            BackgroundColor="{DynamicResource SecondaryBackgroundColor}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="{DynamicResource AccentColor}"
                               Padding="15"
                               Margin="10"
                               BackgroundColor="{DynamicResource SecondaryBackgroundColor}"
                               HasShadow="False"
                               CornerRadius="8">
                            <StackLayout Spacing="10">

                                <!-- Ð˜Ð·Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ðµ Ð¿Ñ€Ð¾Ð´ÑƒÐºÑ‚Ð° -->
                                <Image Source="{Binding ImageUrl}"
                                       HeightRequest="100"
                                       Aspect="AspectFill" />

                                <!-- Ð˜Ð¼Ñ Ð¿Ñ€Ð¾Ð´ÑƒÐºÑ‚Ð° -->
                                <Label Text="{Binding Name, StringFormat='Name: {0}'}"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="16" />

                                <!-- ÐžÐ¿Ð¸ÑÐ°Ð½Ð¸Ðµ Ð¿Ñ€Ð¾Ð´ÑƒÐºÑ‚Ð° -->
                                <Grid ColumnSpacing="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Description, StringFormat='Description: {0}'}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14"
                                           Grid.Row="0"
                                           Grid.Column="0" />
                                    <Button Text="ðŸ”Š"
                                            Command="{Binding Path=BindingContext.SpeakDescriptionCommand, Source={x:Reference productsPage}}"
                                            CommandParameter="{Binding .}"
                                            TextColor="{DynamicResource PrimaryTextColor}"
                                            FontSize="10"
                                            Grid.Row="0"
                                            Grid.Column="1" />
                                </Grid>
                                <!-- Ð¦ÐµÐ½Ð° Ð¿Ñ€Ð¾Ð´ÑƒÐºÑ‚Ð° -->
                                <Label Text="{Binding Price, StringFormat='Price: {0:C}'}"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="14" />

                                <!-- ÐžÑÑ‚Ð°Ñ‚Ð¾Ðº Ð½Ð° ÑÐºÐ»Ð°Ð´Ðµ -->
                                <Label Text="{Binding AvailableStock, StringFormat='Stock: {0}'}"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="14" />

                                <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° "Add to Cart" -->
                                <Button Text="Add to Cart"
                                        Command="{Binding Path=BindingContext.AddToCartCommand, Source={x:Reference productsPage}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"
                                        FontSize="14" />

                                <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸, Ð²Ð¸Ð´Ð¸Ð¼Ñ‹Ðµ Ñ‚Ð¾Ð»ÑŒÐºÐ¾ Ð´Ð»Ñ Ð°Ð´Ð¼Ð¸Ð½Ð¸ÑÑ‚Ñ€Ð°Ñ‚Ð¾Ñ€Ð¾Ð² -->
                                <Button Text="Delete"
                                        Command="{Binding Path=BindingContext.DeleteProductCommand, Source={x:Reference productsPage}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"
                                        FontSize="14">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding Path=BindingContext.IsAdmin, Source={x:Reference productsPage}}"
                                                     Value="False">
                                            <Setter Property="IsVisible"
                                                    Value="False" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Button Text="Edit"
                                        Command="{Binding Path=BindingContext.NavigateToEditProductCommand, Source={x:Reference productsPage}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"
                                        FontSize="14">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding Path=BindingContext.IsAdmin, Source={x:Reference productsPage}}"
                                                     Value="False">
                                            <Setter Property="IsVisible"
                                                    Value="False" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Button Text="{Binding VisibilityIsHiddenText}"
                                        Command="{Binding Path=BindingContext.ToggleVisibilityCommand, Source={x:Reference productsPage}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"
                                        FontSize="14">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding Path=BindingContext.IsAdmin, Source={x:Reference productsPage}}"
                                                     Value="False">
                                            <Setter Property="IsVisible"
                                                    Value="False" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
